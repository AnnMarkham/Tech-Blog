{{> post-info post }}

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>
  <div class="meta">
        by {{post.user.username}} on {{format_date post.created_at}}
  </div>
  <div>
    <button type="submit">add comment</button>
 </div>
</form>
{{/if}}

